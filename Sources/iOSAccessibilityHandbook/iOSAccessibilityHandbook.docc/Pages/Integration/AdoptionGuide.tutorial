            @TutorialReference(tutorial: "doc:TextInput")
            @TutorialReference(tutorial: "doc:ErrorPrevention")
        }
        
        @Chapter(name: "Accessible appearance") {
            @Image(source: chapter-placeholder.png, alt: "")
            
